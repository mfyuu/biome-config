{
	"compilerOptions": {
		"target": "ES2023",
		"lib": ["ES2023"],
		"module": "nodenext",
		"moduleResolution": "nodenext",
		"verbatimModuleSyntax": true,
		"declaration": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
